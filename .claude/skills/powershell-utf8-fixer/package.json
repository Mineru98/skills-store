  "main": "scripts/fix_powershell_encoding.js",
  "scripts": {
    "check": "bun scripts/check_powershell_encoding.js",
    "fix": "bun scripts/fix_powershell_encoding.js"
  },
  "bin": {
    "ps-check-encoding": "scripts/check_powershell_encoding.js",
    "ps-fix-encoding": "scripts/fix_powershell_encoding.js"
  },
  "keywords": [
    "powershell",
    "utf8",
    "bom",
    "encoding",
    "korean",
    "windows"
  ],
